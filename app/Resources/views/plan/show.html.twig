{#{% extends 'base.html.twig' %}#}

{% block body %}
    <h1>Plan</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plan.name }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ plan.job }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if plan.date %}{{ plan.date|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Isdone</th>
                <td>{% if plan.isDone %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plan_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('plan_edit', { 'id': plan.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
