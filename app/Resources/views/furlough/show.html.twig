{% extends 'base.html.twig' %}

{% block body %}
    <h1>Furlough</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ furlough.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ furlough.name }}</td>
            </tr>
            <tr>
                <th>Days</th>
                <td>{{ furlough.days }}</td>
            </tr>
            <tr>
                <th>Ispermited</th>
                <td>{% if furlough.isPermited %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('furlough_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('furlough_edit', { 'id': furlough.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
